{
  "name": "hoi4-ls",
  "description": "The language support for the hoi4 files",
  "author": "VolgaKurvar",
  "license": "MIT",
  "version": "0.1.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuto-moriizumi/hoi4-ls"
  },
  "publisher": "VolgaKurvar",
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "hearts of iron",
    "hearts of iron 4",
    "hoi4",
    "paradox"
  ],
  "engines": {
    "vscode": "^1.63.0"
  },
  "activationEvents": [
    "*"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "languages": [
      {
        "id": "hoi4",
        "extensions": [
          "txt"
        ]
      }
    ]
  },
  "scripts": {
    "lint": "eslint ./client/src ./server/src ./converter/src",
    "typecheck": "npm run --ws typecheck",
    "build": "rm -rf dist && webpack",
    "watch": "webpack --watch",
    "pack": "npm run build && vsce package --allow-star-activation -o dist",
    "publish": "npm run build && vsce publish --allow-star-activation"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.6",
    "@types/node": "^24.1.0",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.0",
    "vscode-languageserver-protocol": "^3.17.5",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "workspaces": [
    "server",
    "client",
    "converter",
    "common"
  ]
}
