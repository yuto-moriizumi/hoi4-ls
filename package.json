{
  "name": "hoi4-ls",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node ./src/main.ts",
    "gen-parser": "nearleyc clausewitz.ne -o clausewitz.js",
    "build": "cd ./client && tsc && cd ../server && tsc"
  },
  "activationEvents": [
    "onLanguage:plaintext"
